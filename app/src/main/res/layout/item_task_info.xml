<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_state"
        android:src="@drawable/ic_gray_tick_circle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签号"
        android:id="@+id/txt_label_number"
        android:textSize="16sp"
        android:textColor="@color/color_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组件类型"
        android:id="@+id/txt_unit_type"
        android:layout_below="@+id/txt_label_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签号"
        android:id="@+id/txt_unit_sub_type"
        android:layout_alignTop="@+id/txt_unit_type"
        android:layout_toRightOf="@+id/txt_unit_type"
        android:layout_toEndOf="@+id/txt_unit_type"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>