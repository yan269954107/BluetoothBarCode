<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

    <ImageView
        android:id="@+id/img_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_gray_tick_circle"/>

    <TextView
        android:id="@+id/txt_label_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:text="标签号"
        android:textColor="@color/color_black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt_unit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_label_number"
        android:layout_toRightOf="@+id/txt_label_number"
        tools:text="组件类型"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/txt_unit_sub_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_unit_type"
        android:layout_toRightOf="@+id/txt_unit_type"
        tools:text="标签号"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="扩展号"
        android:id="@+id/txt_expand_number"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txt_unit_sub_type"
        android:layout_toEndOf="@+id/txt_unit_sub_type"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="尺寸"
        android:id="@+id/txt_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txt_expand_number"
        android:layout_toEndOf="@+id/txt_expand_number"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>